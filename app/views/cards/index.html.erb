<h1>Все карточки</h1>

<div class="row">
  <% @cards.each do |card| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <div class="caption">
          <h3><%= card.original_text %></h3>
          <p><%= card.translated_text %></p>
          <p><%= card.review_date.strftime('%d/%m/%Y') %></p>
          <!-- <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p> -->
        </div>
      </div>
    </div>
  <% end %>
</div>