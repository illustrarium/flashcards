<%= simple_form_for(@card, html: { class: 'form' }) do |f| %>
  <%= f.input :original_text, label: t(".original_text") %>
  <%= f.input :translated_text, label: t(".translated_text") %>
  <%= f.association :deck, label: t(".deck"), collection: current_user.decks %>
  <%= f.input :cardimg, as: :file, label: t(".cardimg") %>
 <%= f.button :submit, btn_text %>
<% end %>