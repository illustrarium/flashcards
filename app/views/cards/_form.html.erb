<%= simple_form_for(@card, html: { class: 'form' }) do |f| %>
  <%= f.input :original_text, label: "Оригинальный текст" %>
  <%= f.input :translated_text, label: "Перевод" %>
  <%= f.association :deck, label: "Колода", collection: current_user.decks %>
  <%= f.input :cardimg, as: :file %>
 <%= f.button :submit, btn_text %>
<% end %>